class Solution {
public:
    int diagonalSum(vector<vector<int>>& mat) 
    {
        int sum=0;
        int m=mat.size();
        
        int i=0;
        int j=m-1;
        while(i<m && j>=0)
        {
            sum+=mat[i][j];
            i++;
            j--;
        }
        i=0;
        j=0;
        while(i<m && j<m)
        {
            sum+=mat[i][j];
            i++;
            j++;
        }
        
        if(m%2==1)
            sum-=mat[m/2][m/2];
        
        return sum;
        
    }
};
